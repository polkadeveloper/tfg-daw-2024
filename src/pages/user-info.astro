---
import Layout from "@/layouts/Layout.astro";

const user = Astro.locals.user;
---

<Layout title="Emblem - Información de usuario">
  <section class="h-[70vh] grid grid-cols-12 font-cabinetGroteskMedium">
    <article class="col-span-3 relative bg-[#BBBBBB] text-black">
      <h2
        class="absolute top-10 left-5 text-2xl font-cabinetGroteskBold uppercase"
      >
        Hola {user.name}
        {user.lastName}
      </h2>
      <ul
        class="w-full flex flex-col justify-center items-center h-full text-lg"
      >
        <li
          class="border-t-2 border-b-[1px] border-black w-full bg-[#AAAAAA] text-center py-2"
        >
          <a class="flex justify-between items-center px-5" href="/user-info"
            >Datos personales
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-fingerprint"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M18.9 7a8 8 0 0 1 1.1 5v1a6 6 0 0 0 .8 3"></path><path
                d="M8 11a4 4 0 0 1 8 0v1a10 10 0 0 0 2 6"></path><path
                d="M12 11v2a14 14 0 0 0 2.5 8"></path><path
                d="M8 15a18 18 0 0 0 1.8 6"></path><path
                d="M4.9 19a22 22 0 0 1 -.9 -7v-1a8 8 0 0 1 12 -6.95"
              ></path></svg
            ></a
          >
        </li>
        <li
          class="border-t-[1px] border-b-[1px] border-black w-full text-center py-2"
        >
          <a class="flex justify-between items-center px-5" href="/user-orders"
            >Mis pedidos
            <svg
              width="24px"
              height="24px"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              color="#000000"
              ><path
                d="M3 18C3.55228 18 4 17.5523 4 17C4 16.4477 3.55228 16 3 16C2.44772 16 2 16.4477 2 17C2 17.5523 2.44772 18 3 18Z"
                fill="#000000"
                stroke="#000000"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"></path><path
                d="M21 7.35304L21 16.647C21 16.8649 20.8819 17.0656 20.6914 17.1715L12.2914 21.8381C12.1102 21.9388 11.8898 21.9388 11.7086 21.8381L3.30861 17.1715C3.11814 17.0656 3 16.8649 3 16.647L2.99998 7.35304C2.99998 7.13514 3.11812 6.93437 3.3086 6.82855L11.7086 2.16188C11.8898 2.06121 12.1102 2.06121 12.2914 2.16188L20.6914 6.82855C20.8818 6.93437 21 7.13514 21 7.35304Z"
                stroke="#000000"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"></path><path
                d="M3.52844 7.29363L11.7086 11.8382C11.8898 11.9388 12.1102 11.9388 12.2914 11.8382L20.5 7.27783"
                stroke="#000000"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"></path><path
                d="M12 21L12 12"
                stroke="#000000"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"></path></svg
            ></a
          >
        </li>
        <li
          class="border-t-[1px] border-b-[1px] border-black w-full text-center py-2"
        >
          <a
            class="flex justify-between items-center px-5"
            href="/user-edit-password"
            >Actualizar contraseña
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-password"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M12 10v4"></path><path d="M10 13l4 -2"></path><path
                d="M10 11l4 2"></path><path d="M5 10v4"></path><path
                d="M3 13l4 -2"></path><path d="M3 11l4 2"></path><path
                d="M19 10v4"></path><path d="M17 13l4 -2"></path><path
                d="M17 11l4 2"></path></svg
            ></a
          >
        </li>
        <li
          class="border-t-[1px] border-b-2 border-black w-full text-center py-2"
        >
          <a
            class="flex justify-between items-center px-5"
            href="/user-payment-methods"
            >Métodos de pago
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-credit-card"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M3 5m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v8a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z"
              ></path><path d="M3 10l18 0"></path><path d="M7 15l.01 0"
              ></path><path d="M11 15l2 0"></path></svg
            ></a
          >
        </li>
      </ul>
    </article>
    <article
      class="col-span-9 flex flex-col gap-5 bg-[#AAAAAA] text-xl py-5 px-1 text-black"
    >
      <form
        class="grid grid-cols-2 gap-5 overflow-y-auto max-h-[60vh] px-4"
        action="post"
        style="scrollbar-width: thin; scrollbar-color: #AAAAAA #FFFFFF;"
      >
        <h2 class="text-2xl font-cabinetGroteskBold uppercase">
          Datos personales:
        </h2>
        <hr class="border-1 border-black col-span-2" />
        <label for="name">
          Nombre:
          <input
            type="text"
            name="name"
            id="name"
            value={user.name}
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <label for="lastName">
          Apellidos:
          <input
            type="text"
            name="lastName"
            id="lastName"
            value={user.lastName}
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <label for="username">
          Nombre de usuario:
          <input
            type="text"
            name="username"
            id="username"
            value={user.username}
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <label for="email">
          Correo:
          <input
            type="email"
            name="email"
            id="email"
            value={user.email}
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <hr class="border-1 border-black col-span-2" />
        <h2 class="text-2xl font-cabinetGroteskBold uppercase col-span-2">
          Dirección de Facturación:
        </h2>
        <label for="address">
          Dirección:
          <input
            type="text"
            name="address"
            id="address"
            value="Calle Juan de Armas, 17"
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <label for="more-info">
          Piso/Escalera (opcional):
          <input
            type="text"
            name="more-info"
            id="more-info"
            value="Piso 2B"
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <label for="postal-code">
          Código Postal:
          <input
            type="text"
            name="postal-code"
            id="postal-code"
            value="38001"
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <label for="city">
          Ciudad:
          <input
            type="text"
            name="city"
            id="city"
            value="Santa Cruz de Tenerife"
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <label for="provincia">
          Provincia:
          <input
            type="text"
            name="provincia"
            id="provincia"
            value="Santa Cruz de Tenerife"
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <label for="country">
          País:
          <input
            type="text"
            name="country"
            id="country"
            value="España"
            class="border-2 border-black bg-[#BBBBBB] text-[#3C3C3C] rounded-md px-2 py-1 w-full"
          />
        </label>
        <hr class="border-1 border-black col-span-2" />
        <button
          class="bg-black text-white px-2 py-1 rounded-md text-lg mt-2 col-span-2"
        >
          Guardar
        </button>
      </form>
    </article>
  </section>
</Layout>
